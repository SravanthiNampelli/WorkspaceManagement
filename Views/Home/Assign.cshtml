@model SpaceIQ.ViewModels.EditViewModel

@{
    ViewBag.Title = "Assign";
}


<div class="d-flex justify-content-center align-content-center mt-5">
    <h2>Assign Workspace</h2>
</div>
<br />
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-info alert-dismissable fade show col-3 position-fixed" role="alert">
            @TempData["SuccessMessage"].ToString()
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

    }
    <div class=" d-flex justify-content-center align-content-center ">
        <div class="card p-5 " style="background-color:wheat">
            @using (Html.BeginForm("Assign", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.EmpId)
                <div class="form-group mb-3">
                    <label class="form-label"><b>Employee Id</b></label>

                    @Html.DisplayFor(model => model.EmpId, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group mb-3 ">
                    <label class="form-label"><b>Employee Name</b></label>

                    @Html.DisplayFor(model => model.EmpName, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label"><b>Workspace Options</b></label>
                    @Html.DropDownListFor(model => model.SelectedWorkspace, Model.WorkspaceOptions, "Select a workspace", new { @class = "form-select", @required = "required" })
                    @Html.ValidationMessage("SelectedWorkspace", "", new { @class = "text-danger" })
                </div>
                <div class="form-group d-flex justify-content-center align-content-center">
                    <input type="submit" value="Save" class="btn btn-primary " />
                </div>
            }
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>